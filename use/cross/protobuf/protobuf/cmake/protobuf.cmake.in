cmake_minimum_required(VERSION 3.0.2)

project(protobuf-download NONE)

 cmake_policy(PUSH)

if (${CMAKE_VERSION} VERSION_LESS "3.16")
    message(WARNING "cmake version < 3.16, protobuf will download git submodules")
else()
    message("cmake version >= 3.16, set CMP0097 NEW")

    # set CMP0097 NEW
    # when ExternalProject_Add set GIT_SUBMODULES empty string, no submodules are initailized or updated
    cmake_policy(SET CMP0097 NEW)
endif()

include(ExternalProject)
ExternalProject_Add(protobuf
        GIT_REPOSITORY    https://github.com/protocolbuffers/protobuf.git
        GIT_TAG           v3.21.2
        GIT_SHALLOW       TRUE
        SOURCE_DIR        "${CMAKE_BINARY_DIR}/_deps/protobuf-src"
        BINARY_DIR        "${CMAKE_BINARY_DIR}/_deps/protobuf-build"
        CONFIGURE_COMMAND ""
        BUILD_COMMAND     ""
        INSTALL_COMMAND   ""
        TEST_COMMAND      ""
		GIT_SUBMODULES    ""
)

cmake_policy(POP)