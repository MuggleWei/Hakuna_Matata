<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context-4.1.xsd
                http://www.springframework.org/schema/aop
                http://www.springframework.org/schema/aop/spring-aop-4.1.xsd">

    <bean id="performanceAspect" class="com.muggle.monitor.RawPerformanceMonitor"/>
    <aop:config>
        <aop:aspect id="aspect" ref="performanceAspect">
            <aop:pointcut id="needPerformanceMonitor" expression="execution (* com.muggle.object..*(..))"/>

            <aop:before method="begin" pointcut-ref="needPerformanceMonitor"/>
            <aop:after method="end" pointcut-ref="needPerformanceMonitor"/>
        </aop:aspect>
    </aop:config>

</beans>